<%= form_with(url: subscriptions_path) do |form| %>
		<div class="mb-4">
				<%= form.label :email, class: 'sr-only' %>
				<%= form.email_field :email, class: 'form-input mt-1 block w-full', placeholder: 'Enter your email', required: true %>

		</div>
		<%= form.submit 'Subscribe', class: 'bg-green-500 hover:bg-green-600 active:bg-green-700 text-white font-serif font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
<% end %>

