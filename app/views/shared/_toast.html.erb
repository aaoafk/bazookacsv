<!-- app/views/shared/_toast.html.erb -->

<turbo-frame id="subscription-frame">
		<div class="flex items-center justify-center">
				<div class="flex items-center bottom-4 right-4 bg-white rounded-lg shadow-lg p-4">
						<!-- toast content -->
						<div class="mb-4">
								<% if type == 'success' %>
										<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
								<% elsif type == 'error' %>
										<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
										</svg>
								<% end %>
						</div>
						<div>
								<% if type == 'error' %>
										<% errors.full_messages.each do |error| %>
												<p class="text-sm"><%= error %></p>
										<% end %>
								<% else  %>
										<p class="text-sm">
												Thanks for subscribing! You'll receive updates on development!
										</p>
								<% end %>
						</div>
				</div>
		</div>
</turbo-frame>
